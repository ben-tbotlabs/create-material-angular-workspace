import { createFeatureSelector, createSelector } from '@ngrx/store';

import { LAYOUT_FEATURE_KEY, LayoutPartialState, State } from './layout.reducer';

export const getLayoutState = createFeatureSelector<LayoutPartialState, State>(
	LAYOUT_FEATURE_KEY
);

export const selectIsSidenavOpen = createSelector( getLayoutState, ( state: State ) => state.opened );
